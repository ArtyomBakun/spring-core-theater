<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
      http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:property-placeholder location="classpath:data/auditorium.properties" />

    <bean id="aud1" class="ua.epam.spring.hometask.domain.Auditorium" >
        <property name="name" value="${name}"/>
        <property name="numberOfSeats" value="${numberOfSeats}"/>
        <property name="vipSeats" value="#{aud1.setVipSeatsFromString(${vipSeats})}"/>
    </bean>

</beans>